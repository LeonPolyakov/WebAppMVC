            @Html.DropDownListFor(model => model.StudentGender, new SelectList(Enum.GetValues(typeof(Gender))))
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
